.salon-main{
    width: 700rpx;
	margin: 0 auto;
	margin-bottom: 300rpx;
}
.salon-pic{
    position: relative;
}
.salon-pic .salon-img{
        width: 700rpx;
        height: 484rpx;
        border-top-left-radius: 28rpx;
        border-top-right-radius: 28rpx;
        border-bottom-left-radius: 48rpx;
        border-bottom-right-radius: 48rpx;
    }
.icons{
    position: relative;
    width: 700rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: flex-end;
}
.icons image{
    width: 35rpx;
    height: 32rpx;
    margin-right: 30rpx;
    text-align: center;
}
.icons text{
    /* margin-bottom: 10rpx;
    margin-right: 20rpx; */
    font-size: 18rpx;
    text-align: center;
    color: rgb(196, 197, 199);
    margin-bottom: 10rpx;
}
.salon-body{
    position: relative;
    padding-left: 25rpx;
    width: 700rpx;
}
.salon-detail{
    font-size: 28rpx;
    line-height: 30rpx;
    margin-bottom: 40rpx;
    color: rgb(128, 128, 132);
}
.salon-detail text{
    height: 30rpx;
    text-align: center;
}
.salon-class-intro{
    position: relative;
}
.title{
    color: #1E6CB5;
    font-size: 28rpx;
}
.title .title-bar{
    width: 16rpx;
    background-color: #306FB6;
    border-radius: 4rpx;
    margin-right: 20rpx;
    display: inline-block;
    margin-bottom: 30rpx;
