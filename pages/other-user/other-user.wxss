/* pages/other-user/other-user.wxss */
.other-user{
    background-color: #041746;
}
.other-user-top{
    width: 100%;
    height: 442rpx;
    color: #fff;
    text-align: center;
}
.user-img-box{
    padding-top: 88rpx;
    padding-bottom: 42rpx;
}
.user-img-box .user-img{
    width: 164rpx;
    height: 168rpx;
    border-radius: 20rpx;
}
.user-name{
    text-align: center;
    height: 42rpx;
    font-size: 32rpx;
    font-weight: 700;
    line-height: 42rpx;
    margin-bottom: 34rpx;
}
.user-follow{
    font-size: 20rpx;
    line-height: 28rpx;
    display: flex;
    text-align: center;
    justify-content: space-between;
    padding: 0 200rpx 0 200rpx;
}
.user-follow .follow-detail{
    flex: 1;
    
}
.user-follow .follow-detail .num{
    padding-left: 6rpx;
}
.user-follow .follow-click{
    width: 104rpx;
    margin-left: 20rpx;
    background-color: #8ea0bc;
    border-radius: 10rpx;
}
.myself-main{
    background-color: #fff;
    padding: 58rpx 40rpx 0 40rpx;
    border-radius: 68rpx 68rpx 0 0;
}
.myself-main-bottom{
    padding-top: 60rpx;
    text-align: center;
    color: #006AD7;
}