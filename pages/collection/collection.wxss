/* pages/collection/collection.wxss */
.main-box{
    margin: 0 48rpx 0 48rpx;
}
input{
    display: inline-block;
    margin: 0 15rpx 0 40rpx;
    padding-left: 1em;
    width: 500rpx;
    border: 4rpx solid #006FFF;
    border-radius: 32rpx;
}
.main-box .search-box{
    height: 1.5em;
}
.main-box .search-icon{
    position: absolute;
    margin-left: 600rpx;
    width: 1.5rem;
    height: 1.5rem;
}
.collection-body{
    margin-top: 40rpx;
}
.title{
    display: flex;
    color: #1E6CB5;
    font-size: 28rpx;
    line-height: 30rpx;
    margin-bottom: 48rpx;
/* font-family: "PingFang SC"; */
}
.title .title-bar{
    display: inline-block;
    width: 10rpx;
    height: 30rpx;
    background-color: #006ad7;
    border-radius: 2rpx;
}
.title .type{
    padding-left: 30rpx;
    width: 600rpx;
    display: flex;
    justify-content: space-between;
}
.title .active{
    color: #006ad7;
    /* 加粗了 
    font-weight: 700;*/

}
.collect-item{
    width: 100%;
    margin-top: 22rpx;
    display: flex;
}
.item-img{
    position: absolute;
}
.item-pic{
    width: 206rpx;
    height: 240rpx;
    margin-left: 42rpx;
    border-radius: 10rpx;
    box-shadow: 0rpx 6rpx 10rpx #000;
}
.item-block{
    margin-top: 22rpx;
    width: 100%;
    height: 236rpx;
    border: 2rpx solid #006fff;
    border-radius: 20rpx;
    box-shadow: 0 3rpx 10rpx rgb(200,200,200) inset,0 3rpx 10rpx rgb(200,200,200);
    box-sizing: border-box;
}
.item-detail{
    padding-top: 30rpx;
    margin-left: 280rpx;
    /* padding-right: 48rpx; */
    letter-spacing: 2rpx;
}
.item-detail .item-title{
    display: block;
    line-height: 42rpx;
    font-size: 32rpx;
    color: #4F73A5;
}
.item-detail .item-date{
    display: block;
    line-height: 24rpx;
    font-size: 16rpx;
    padding-top: 10rpx;
    color: rgb(142, 142, 142);
}
.item-detail .item-location{
    display: block;
    line-height: 24rpx;
    font-size: 16rpx;
    padding-top: 10rpx;
    color: rgb(142, 142, 142);
}
.item-detail .item-tags{
    overflow: hidden;
    display: flex;
    height: 36rpx;
    color: #4f73a5;
    margin-top: 28rpx;
}
.item-tags view{
    display: inline-block;
    font-size: 16rpx;
    padding: 4rpx 20rpx 4rpx 20rpx;
    margin-right: 28rpx;
    border: 2rpx solid #4f73a5;
    border-radius: 8rpx;
}
