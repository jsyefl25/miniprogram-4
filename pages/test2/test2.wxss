.intro-title{
    color: #006fff;
    font-size: 18rpx;
    line-height: 24rpx;
    margin-bottom: 28rpx;
}
.class-detail{
    color: #A9B5C9;
    font-size: 28rpx;
    line-height: 56rpx;
    height: 120rpx;
    overflow: hidden;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin-bottom: 28rpx;
}
.class-img{
    /* flex: 1; */
    height: 208rpx;
    width: 100%;
    box-shadow: 0 6rpx 10rpx #000;
    border-radius: 24rpx;
    margin-bottom: 80rpx;
}
.team-detail{
    font-size: 28rpx;
    color: #A9B5C9;
    line-height: 56rpx;
    height: 156rpx;
    overflow: hidden;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin-bottom: 26rpx;
}
.click-to-detail{
    font-size: 16rpx;
    line-height: 22rpx;
    color: #006fff;
    margin-bottom: 82rpx;
    text-align: end;
}
.body-left{
    width: 386rpx;
    position: absolute;
    top: auto;
    left: 48rpx;
}
.comment-title{
    color: #006FFF;
    line-height: 38rpx;
    height: 39rpx;
    font-size: 28rpx;
    margin-bottom: 38rpx;
}
.comment-item{
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #A9B5C9;
}
.user-box{
    display: flex;
    margin-bottom: 24rpx;
}
.user-img{
    width: 76rpx;
    height: 76rpx;
    border-radius: 24rpx;
    box-shadow: 0 6rpx 10rpx #000;
}
.user-name{
    font-size: 28rpx;
    line-height: 56rpx;
    height: 56rpx;
    padding: 10rpx 0 10rpx 42rpx;
}
.content{
    line-height: 56rpx;
    font-size: 24rpx;
    overflow: hidden;
    height: 160rpx; 
    margin-bottom: 46rpx;  
}
.isTopComment{
    height: 102rpx;
}
.enter{
    /* flex: 1; */
    color: #fff;
    font-size: 24rpx;
    line-height: 32rpx;
    height: 32rpx;
    text-align: end;
}