page{
    background-color: #041746;
}
.main-title-box{
    margin: 40rpx auto;
    /* margin-bottom: 48rpx; */
    text-align: center;
    background-color: #4F73A5;
    width: 560rpx;
    height: 82rpx;
    border-radius: 42rpx;
    box-shadow: 0 0 8rpx #4F73A5;
    opacity: 53%;
    font-size: 24rpx;
    line-height: 82rpx;
    color: #fff;
}
.main-body{
    margin: 0 48rpx;
}
movable-area{
    width: 654rpx;
    position: absolute;
    height: 968rpx;
}
movable-view{
    z-index: 10;
    width: 208rpx;
    top: auto;
    left: auto;
}
.recommend-pic{
    border-radius: 24rpx;
    border: 2rpx solid #707070;
    height: 962rpx;
    width: 100%;
}
.body-right{
    position: absolute;
    top: auto;
    right: 48rpx;
    /* display: flex;
    flex-direction: column; */
    width: 386rpx;
}
