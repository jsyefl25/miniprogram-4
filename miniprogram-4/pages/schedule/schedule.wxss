/* pages/schedule/schedule.wxss */
.schedule-top{
    width: 100%;
    height: 350rpx;
    background-color: rgb(4, 23, 70);
}
.schedule-top-box{
    width: 654rpx;
    margin: 0 auto;
}
.schedule-date{
    padding-top: 40rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 38rpx;
    /* font-family: "PingFang SC"; */
}
.schedule-date .date-bar{
    display: inline-block;
    width: 16rpx;
    height: 38rpx;
    background-color: rgb(255, 245, 106);
    border-radius: 4rpx;
}
.date{
    letter-spacing: 6rpx;
    padding-left: 40rpx;
}