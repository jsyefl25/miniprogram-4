/* pages/class/class.wxss */
.class-main{
    width: 700rpx;
	margin: 0 auto;
	margin-bottom: 100rpx;
}
.class-top{
    position: relative;
}
.title{
    color: #1E6CB5;
    font-size: 28rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}
.title .title-bar{
    width: 16rpx;
    background-color: #306FB6;
    border-radius: 4rpx;
    margin-right: 20rpx;
    display: inline-block;
    margin-bottom: 10rpx;
}
.team-scroll{
    height: 480rpx;
    margin-top: 40rpx;
    overflow: hidden;
    white-space: nowrap;
}
.team-scroll .team-body{
    display: flex;
}
.team-scroll .team-member{
    display: inline-block;
    width: 300rpx;
    height: 460rpx;
    background-color: #C9DCF0;
    position: relative;
    padding: 35rpx 35rpx 0rpx 35rpx;
    box-sizing: border-box;
    border-radius: 24rpx;
	margin-right: 30rpx;
}
.team-scroll .team-member view{
    width: 230rpx;
    height: 280rpx;
    position: relative;
    margin-bottom: 20rpx;
}
.team-scroll image{
    width: 100%;
	height: 100%;
    text-align: center;
	border-radius: 10rpx;
}
.team-scroll text{
    position: relative;
    display: inline-block;
    width: 100%;
	height: 140rpx;
    text-align: left;
    font-size: 24rpx;
    line-height: 40rpx;
    color: rgb(128, 128, 132);
    /* justify-content: flex-start; */
    overflow: hidden;
    white-space: normal;
    vertical-align: middle;
}
.class-middle{
    margin-top: 40rpx;
}
.class-content-scroll{
    box-sizing: border-box;
    padding-left: 20rpx;
    padding-right: 20rpx;
}
.class-content-item .class-num{
    color: rgb(51, 116, 186);
    font-weight: 700;
    margin-right: 20rpx;
}
.class-content-item .class-name{
    color: rgb(109, 141, 177);
}
.class-time{
    height: 50rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
    background-color: #C9DCF0;
    text-align: center;    
    color: #1E6CB5;
}
.class-time text{
    display: inline-block;
}
.class-comment{
    position: relative;
}
.comment-block{
    position: relative;
    width: 100%;
    height: 50rpx;
    line-height: 40rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.comment-block .title{
    margin-right: 460rpx;
    margin-left: 20rpx;
    font-size: 30rpx;
}
.comment-block image{
    width: 50rpx;
    height: 40rpx;
}
.comment-block .comment-num{
    /* margin-bottom: 10rpx; */
    margin-right: 10rpx;
    font-size: 20rpx;
    color: rgb(196, 197, 199);
}
.comment-scroll{
    height: 300rpx;
    overflow: hidden;
    white-space: nowrap;
    display: flex;
}
.comment-scroll .comment-item{
    display: inline-block;
    width: 490rpx;
    height: 210rpx;
    background-color: rgb(224, 232, 240);
    /* position: relative; */
    padding: 0rpx 40rpx 0rpx 40rpx;
    box-sizing: border-box;
	margin-right: 30rpx;   
    border-style: solid;
    border-width: 1rpx;
    border-radius: 24rpx;
    border-color: #306FB6;
}
.comment-scroll .comment-item .user{
    width: 410rpx;
    height: 60rpx;
    /* position: relative; */
    margin-top: 10rpx;
    margin-bottom: 30rpx;
    line-height: 60rpx;
    color: rgb(110, 110, 114);
    align-items: center;
}
.comment-scroll .comment-item .user .user-name{
    display: inline-block;
    width: 350rpx;
    height: 60px;
    padding-top: 20rpx;
    /* line-height: 60rpx; */
    font-size: 28rpx;
    vertical-align: middle;
}
.comment-scroll image{
    width: 60rpx;
	height: 60rpx;
    text-align: center;
    border-radius: 100%;
    margin-right: 30rpx;
}
/* .comment-block .user-name{

} */
.comment-scroll .comment-item .comment{
    position: relative;
    display: inline-block;
    width: 100%;
	height: 140rpx;
    text-align: left;
    font-size: 24rpx;
    line-height: 40rpx;
    color: rgb(128, 128, 132);
    justify-content: flex-start;
    overflow: hidden;
    white-space: normal;
    vertical-align: middle;
}
.class-book{
    position: fixed;
    width: 508rpx;
	height: 104rpx;
	line-height: 104rpx;
	text-align: center;
	border-radius: 24rpx 0 92rpx 24rpx;
	background-color: #2275BB;
	color: #fff;
	right: -80rpx;
	bottom: 0;
	z-index: 2;
}