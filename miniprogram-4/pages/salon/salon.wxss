.comment-block{
    position: relative;
    width: 100%;
    height: 40rpx;
    /* line-height: 40rpx; */
    /* text-align: center; */
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.comment-block .title{
    margin-right: 460rpx;
    margin-left: 20rpx;
    font-size: 30rpx;
}
.comment-block image{
    width: 50rpx;
    height: 40rpx;
}
.comment-block .comment-num{
    /* margin-bottom: 10rpx; */
    margin-right: 10rpx;
    font-size: 20rpx;
    color: rgb(196, 197, 199);
}
.comment-scroll{
    height: 300rpx;
    overflow: hidden;
    white-space: nowrap;
    display: flex;
}
.comment-scroll .comment-item{
    display: inline-block;
    width: 490rpx;
    height: 210rpx;
    background-color: rgb(224, 232, 240);
    padding: 0rpx 40rpx 0rpx 40rpx;
    box-sizing: border-box;
	margin-right: 30rpx;   
    border-style: solid;
    border-width: 1rpx;
    border-radius: 24rpx;
    border-color: #306FB6;
}
.comment-scroll .comment-item .user{
    width: 410rpx;
    height: 60rpx;
    /* margin-top: 10rpx; */
    margin-bottom: 30rpx;
    line-height: 60rpx;
    color: rgb(110, 110, 114);
    align-items: center;
}
.comment-scroll .comment-item .user .user-name{
    display: inline-block;
    width: 350rpx;
    height: 60px;
    padding-top: 20rpx;
    font-size: 28rpx;
    vertical-align: middle;
}
.comment-scroll image{
    width: 60rpx;
	height: 60rpx;
    /* text-align: center; */
    border-radius: 100%;
    margin-right: 30rpx;
}
/* .comment-block .user-name{

} */
.comment-scroll .comment-item .comment{
    position: relative;
    display: inline-block;
    width: 100%;
	height: 140rpx;
    text-align: left;
    font-size: 24rpx;
    line-height: 40rpx;
    color: rgb(128, 128, 132);
    justify-content: flex-start;
    overflow: hidden;
    white-space: normal;
    vertical-align: middle;
}
.salon-book{
    position: fixed;
    width: 508rpx;
	height: 104rpx;
	line-height: 104rpx;
	text-align: center;
	border-radius: 24rpx 0 92rpx 24rpx;
	background-color: #2275BB;
	color: #fff;
	right: -80rpx;
	bottom: 0;
	z-index: 2;
}