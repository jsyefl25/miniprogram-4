.salon-main{
    width: 700rpx;
	margin: 0 auto;
	margin-bottom: 100rpx;
}
.salon-pic{
    position: relative;
}
.salon-pic .salon-img{
        width: 700rpx;
        height: 484rpx;
        border-top-left-radius: 28rpx;
        border-top-right-radius: 28rpx;
        border-bottom-left-radius: 48rpx;
        border-bottom-right-radius: 48rpx;
    }
.icons{
    position: relative;
    width: 700rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
    display: flex;
    justify-content: flex-end;
}
.icons image{
    width: 32rpx;
    height: 32rpx;
    margin-right: 30rpx;
    text-align: center;
}
.icons text{
    /* margin-bottom: 10rpx;
    margin-right: 20rpx; */
    font-size: 18rpx;
    text-align: end;
    color: rgb(196, 197, 199);
}
.salon-body{
    position: relative;
    padding-left: 25rpx;
    width: 675rpx;
}
.salon-detail{
    font-size: 28rpx;
    line-height: 30rpx;
    margin-bottom: 50rpx;
    color: rgb(128, 128, 132);
}
.salon-detail text{
    height: 30rpx;
    text-align: center;
}
.salon-class-intro{
    position: relative;
}
.title{
    color: #1E6CB5;
    font-size: 28rpx;
}
.title .title-bar{
    width: 16rpx;
    background-color: #306FB6;
    border-radius: 4rpx;
    margin-right: 20rpx;
    display: inline-block;
    margin-bottom: 10rpx;
    /* display: inline-block;
	width: 12rpx;
	height: 40rpx;
	background-color: #306FB6;
	margin-right: 20rpx;
	border-radius: 4rpx;
	vertical-align: text-top; */
}
.salon-class-intro .class-introduction{
    width: 620rpx;
    text-indent: 2em;
    line-height: 50rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-bottom: 50rpx;    
    color: rgb(128, 128, 132);
    font-size: 28rpx;
}
.team-scroll{
    height: 490rpx;
    margin-top: 40rpx;
    overflow: hidden;
    white-space: nowrap;
}
.team-scroll .team-body{
    display: flex;
}
.team-scroll .team-member{
    display: inline-block;
    width: 320rpx;
    height: 460rpx;
    background-color: #C9DCF0;
    position: relative;
    padding: 35rpx 35rpx 0rpx 35rpx;
    box-sizing: border-box;
    border-radius: 24rpx;
	margin-right: 30rpx;
}
.team-scroll .team-member view{
    width: 230rpx;
    height: 280rpx;
    position: relative;
    margin-bottom: 20rpx;
}
.team-scroll image{
    width: 100%;
	height: 100%;
    text-align: center;
	border-radius: 10rpx;
}
.team-scroll text{
    position: relative;
    display: inline-block;
    width: 100%;
	height: 140rpx;
    text-align: left;
    font-size: 22rpx;
    line-height: 40rpx;
    color: rgb(128, 128, 132);
    /* justify-content: flex-start; */
    overflow: hidden;
    white-space: normal;
    vertical-align: middle;
}
